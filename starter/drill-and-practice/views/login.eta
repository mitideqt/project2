<% layout('./layouts/layout.eta') %>

<h1 class="highlight">Login form</h1>

<form method="POST" action="/auth/login">
  <label for="email" class="textbox">Email</label>
  <input class="textbox" id="email" type="email" name="email" value="<%= it.email ? it.email:'' %>"/> <br/>
  <label for="pw" class="textbox">Password</label>
  <input class="textbox" id="pw" type="password" name="password"/> <br/>
  <input type="submit" value="Login" />
</form>
<p class="message"> 
  <%= it.emailDetail ? it.emailDetail:'' %>
  <%= it.passwordDetail ? it.passwordDetail:'' %>
</p>
<a class="centering" href="/auth/register">No account? Register here.</a>