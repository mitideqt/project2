<% layout('./layouts/layout.eta') %>

<h1 class="highlight">Registration form</h1>

<form method="POST" action="/auth/register">
  Email: <input type="email" name="email" value="<%= it.emaildetail ? it.emaildetail:'' %>"/><br/>
  Password:  <input type="password" name="password" /><br/>
  <input type="submit" value="Register" />
</form>
<p class="message"> 
  <%= it.emailDescription ? it.emailDescription : '' %>
  <%= it.pwDescription ? it.pwDescription : '' %> 
</p>
<a class="centering" href="/auth/login">Already registered? Login here.</a>
