<% layout('./layouts/layout.eta') %>

<h1 class="correct"> Correct! </h1> 
<h2 class="highlight"> Question: <%= it.question %> </h2>

<% if (it.correctOptions && it.correctOptions.length > 0 ) {%>
    <% it.correctOptions.forEach(option => { %>
        <p class="textbox" >&#10024; <%= option.option_text %> </p> <br/>
    <% }) %>
<% } %>

<form method="GET" class="colorBox" action="/quiz/<%= it.tId %>">
  <input type="submit" value="Next question"/>
</form>
